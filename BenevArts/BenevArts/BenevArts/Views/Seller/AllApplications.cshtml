@model IEnumerable<SellerApplicationViewModel>

<div class="container mt-4">
    <h2>Applications</h2>

    <div class="form-group">
        <label for="applicationStateFilter">Filter by State:</label>
        <select class="form-control" id="applicationStateFilter">
            <option value="">All</option>
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Declined">Declined</option>
        </select>
    </div>

    <div id="applicationsList">
        <!-- The filtered applications will be loaded here via AJAX -->
    </div>

</div>

@section Scripts {
    <script src="~/js/AllApplications.js"></script>
}