@model IEnumerable<CategoryViewModel>

<div class="row mt-3">
    @foreach (var category in Model)
    {
        <div class="col-md-3">
            <a href="@Url.Action("Assets", "Category", new { categoryId = category.Id })" class="card mb-4" style="color:black">
                <img src="@category.Image" class="card-img-top" alt="Category Image">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <p class="card-text">Category description or additional information.</p>
                </div>
            </a>
        </div>
    }
</div>
